{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make clean",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceRoot}/src"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/src"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/src"
            },
            "args": ["FFLAGS=\"-g -O0\""],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "install",
            "type": "shell",
            "command": "make install",
            "options": {
                "cwd": "${workspaceRoot}/src"
            },
            "group": "build",
            "problemMatcher": []
        }
    ]
}
